{
  "notify": {
    "defaultPriority": "high",
    "defaultTopic": "ralph-build",
    "enabled": true,
    "events": {
      "claude:stop": { "enabled": false },
      "claude:permissionPrompt": { "priority": "max", "tags": ["warning"] },
      "ralph:milestoneComplete": { "priority": "high", "tags": ["tada"] },
      "ralph:subtaskComplete": { "priority": "default" },
      "ralph:validationFail": { "priority": "high", "tags": ["warning"] },
      "ralph:maxIterationsExceeded": { "priority": "max", "tags": ["rotating_light"] }
    },
    "quietHours": {
      "enabled": true,
      "endHour": 8,
      "startHour": 22
    },
    "server": "http://100.92.35.100:8080",
    "title": "aaa notify"
  },
  "ralph": {
    "hooks": {
      "onIterationComplete": [
        "log"
      ],
      "onMilestoneComplete": [
        "log",
        "notify"
      ],
      "onValidationFail": [
        "log",
        "notify"
      ],
      "onMaxIterationsExceeded": [
        "log",
        "notify",
        "pause"
      ]
    },
    "selfImprovement": {
      "mode": "suggest"
    }
  }
}
