{
  "notify": {
    "defaultPriority": "high",
    "defaultTopic": "ralph-build",
    "enabled": false,
    "events": {
      "claude:stop": {
        "enabled": false
      },
      "ralph:maxIterationsExceeded": {
        "priority": "max",
        "tags": ["alert", "failure"]
      },
      "ralph:milestoneComplete": {
        "priority": "high",
        "tags": ["tada"]
      },
      "ralph:subtaskComplete": {
        "priority": "low"
      }
    },
    "quietHours": {
      "enabled": true,
      "endHour": 8,
      "startHour": 22
    },
    "server": "http://100.92.35.100:8080",
    "title": "aaa notify"
  },
  "ralph": {
    "hooks": {
      "onIterationComplete": [
        "log"
      ],
      "onMilestoneComplete": [
        "log",
        "notify"
      ],
      "onValidationFail": [
        "log",
        "notify"
      ],
      "onMaxIterationsExceeded": [
        "log",
        "notify",
        "pause"
      ]
    },
    "selfImprovement": {
      "mode": "suggest"
    }
  }
}
