{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "subtasks.schema.json",
  "title": "Subtasks Queue",
  "description": "Schema for subtasks.json - the work queue for Ralph Iterations (autonomous agent sessions)",
  "type": "object",
  "required": ["subtasks"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema for validation"
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata about this subtasks queue",
      "properties": {
        "scope": {
          "type": "string",
          "enum": ["milestone", "story"],
          "description": "Whether this queue covers a milestone or single story"
        },
        "milestoneRef": {
          "type": "string",
          "description": "Reference to parent milestone (e.g., 'mvp', 'beta')"
        },
        "storyRef": {
          "type": "string",
          "description": "Reference to parent story if scope is 'story'"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "When this queue was created"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification time"
        }
      }
    },
    "subtasks": {
      "type": "array",
      "description": "The queue of subtasks for autonomous agents to process",
      "items": {
        "$ref": "#/$defs/subtask"
      }
    }
  },
  "$defs": {
    "subtask": {
      "type": "object",
      "required": ["id", "taskRef", "title", "description", "status", "acceptanceCriteria"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^SUB-[0-9]{3,}$",
          "description": "Unique subtask identifier (e.g., 'SUB-001')"
        },
        "taskRef": {
          "type": "string",
          "pattern": "^TASK-[0-9]{3,}$",
          "description": "Reference to parent task (e.g., 'TASK-001'). Subtasks always have a task parent."
        },
        "storyRef": {
          "type": ["string", "null"],
          "pattern": "^STORY-[0-9]{3,}$",
          "description": "Reference to grandparent story if task has one (e.g., 'STORY-001'). Null for orphan tasks."
        },
        "title": {
          "type": "string",
          "maxLength": 100,
          "description": "Short descriptive title for commit messages and progress tracking"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of what needs to be implemented"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "completed", "blocked", "skipped"],
          "description": "Current status of the subtask"
        },
        "priority": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5,
          "default": 3,
          "description": "Priority level (1=highest, 5=lowest). Agents select lower numbers first."
        },
        "acceptanceCriteria": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          },
          "description": "Specific, testable criteria that define completion. Used in Validate phase."
        },
        "atomicDocs": {
          "type": "object",
          "description": "References to atomic documentation the agent should read during Investigate phase",
          "properties": {
            "blocks": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Block references (e.g., '@context/blocks/construct/bun.md')"
            },
            "foundations": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Foundation references (e.g., '@context/foundations/test/test-unit-vitest.md')"
            },
            "stacks": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Stack references (e.g., '@context/stacks/cli/cli-bun.md')"
            }
          }
        },
        "codeContext": {
          "type": "object",
          "description": "Code locations the agent should read during Investigate phase",
          "properties": {
            "readFiles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Files to read for context (relative paths from repo root)"
            },
            "readPatterns": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Glob patterns for files to read (e.g., 'src/auth/**/*.ts')"
            },
            "modifyFiles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Expected files to modify (helps agent verify scope)"
            }
          }
        },
        "testContext": {
          "type": "object",
          "description": "Testing requirements for the Validate phase",
          "properties": {
            "testFiles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Specific test files to run"
            },
            "testPatterns": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Test patterns to run (e.g., 'auth.*')"
            },
            "testCommand": {
              "type": "string",
              "description": "Custom test command if different from default"
            }
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^SUB-[0-9]{3,}$"
          },
          "description": "Subtask IDs that must be completed before this one can start"
        },
        "blockedReason": {
          "type": "string",
          "description": "Explanation when status is 'blocked'. Required if blocked."
        },
        "skipReason": {
          "type": "string",
          "description": "Explanation when status is 'skipped'. Required if skipped."
        },
        "completedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when subtask was completed"
        },
        "commitHash": {
          "type": "string",
          "pattern": "^[a-f0-9]{7,40}$",
          "description": "Git commit hash that completed this subtask"
        },
        "iterationId": {
          "type": "string",
          "description": "Identifier of the Ralph iteration that completed this subtask"
        },
        "notes": {
          "type": "string",
          "description": "Optional notes for the implementing agent or reviewers"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "status": { "const": "blocked" } }
          },
          "then": {
            "required": ["blockedReason"]
          }
        },
        {
          "if": {
            "properties": { "status": { "const": "skipped" } }
          },
          "then": {
            "required": ["skipReason"]
          }
        },
        {
          "if": {
            "properties": { "status": { "const": "completed" } }
          },
          "then": {
            "required": ["completedAt", "commitHash"]
          }
        }
      ]
    }
  }
}
