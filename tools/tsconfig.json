{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./lib/*"],
      "@tools/*": ["./src/*"]
    },
    "types": ["bun-types"]
  },
  "include": [
    "src/**/*",
    "lib/**/*"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}
