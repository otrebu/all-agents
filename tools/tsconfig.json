{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": { "@lib/*": ["./lib/*"], "@tools/*": ["./src/*"] },
    "types": ["bun-types"]
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "tests/**/*",
    "vitest.config.ts",
    "eslint.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}
